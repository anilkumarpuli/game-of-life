}
   }
   stage('Unit Test Results') {
      steps {
      junit '**/target/surefire-reports/TEST-*.xml'
      
      }
 }
  stage('Sonarqube') {
    environment {
       scannerHome = tool 'sonar'
    }
    steps {
        withSonarQubeEnv('sonar') {
            sh "${scannerHome}/bin/sonar-scanner"
          }
        
          }
         }
  stage('Artifact upload to nexus') {
      steps {
  nexusArtifactUploader artifacts: [[artifactId: 'gameoflife', classifier: 'class', file: '/home/slave/workspace/pipelinegoL/gameoflife-web/target/gameoflife.war', type: 'war']], credentialsId: '2663b614-ef56-4fbf-ad9d-620d489b9070', groupId: 'maven', nexusUrl: '172.31.38.134:8081', nexusVersion: 'nexus3', protocol: 'http', repository: 'mavenrepo1', version: '$BUILD_ID'      
     }
      }
      stage('upload to tomcat')
      { 
      steps{
      deploy adapters: [tomcat8(credentialsId: 'c766935a-0477-4146-b33f-3d585d0213b6', path: '', url: 'http://13.233.45.118:8080/')], contextPath: 'nail', war: 'gameoflife-web/target/gameoflife.war'
      }
      }
    stage('Build and tag')
        {
      steps{
        sh 'docker build -t gameoflife-image:$BUILD_NUMBER .'
        sh "docker tag gameoflife-image:$BUILD_NUMBER docker.io/anilkumblepuli/gameoflife-image:$BUILD_NUMBER"
      }
     }
