pipeline {
     agent {label 'slave1'}
    tools { 
        maven 'maven' 
      
    }
stages { 
   stage('Preparation') { 
     steps {
 //for display purposes

    //   Get some code from a GitHub repository

      git 'https://github.com/anilkumarpuli/game-of-life.git'

      // Get the Maven tool.
     
 // ** NOTE: This 'M3' Maven tool must be configured
 
